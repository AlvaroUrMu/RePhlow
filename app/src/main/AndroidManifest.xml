<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ivz.ad.aurbano.rephlow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RePhlow.NoActionBar">
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="RePhlow"/>
        <activity
            android:name=".view.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.AddFloraActivity"
            android:exported="true"
            android:label="Añadir flor"
            android:parentActivityName=".view.MainActivity"/>
        <activity
            android:name=".view.AddImagenActivity"
            android:exported="true"
            android:label="Añadir imagen"
            android:parentActivityName=".view.MainActivity"/>
        <activity
            android:name=".view.EditActivity"
            android:exported="true"
            android:label="Editar flor"
            android:parentActivityName=".view.MainActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>